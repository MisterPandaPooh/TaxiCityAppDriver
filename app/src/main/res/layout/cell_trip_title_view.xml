<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_trip_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trip_title_id"
        style="@style/labelTripItem"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@drawable/title_trip_id_item"
        android:gravity="center_vertical"
        android:text="@string/about_this_trip_content_cell_title"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/trip_destination_title_view"
        style="@style/inputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_target_24dp"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorLightenGrey"
        android:padding="4dp"
        android:text="@string/destination_adresse_hint"
        android:textSize="12sp"
        tools:ignore="UnusedAttribute" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:contentDescription="@string/default_description"
                android:src="@drawable/ic_taxihdpi" />

            <TextView

                android:id="@+id/distance_from_you_lbl_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_from_you_lbl"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/distance_from_you_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_from_yo_hint"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="0.6dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:contentDescription="@string/default_description"
                android:src="@drawable/ic_triphdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_distance_lbl"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/trip_distance_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_from_yo_hint"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:layout_width="0.6dp"
            android:layout_height="fill_parent"

            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:src="@drawable/file1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date_lbl"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/datetime_trip_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date_hint"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>